include ./_mixins.pug

section#contact.contact
  h2 Get in #[span touch], we'd love to hear from you.
  p=data.contactForm.mainText
  div.contactDetails
    div.cd-group.left
      p
        i.ion-ios-home
        =data.contactForm.address
    div.cd-group
      p
        i.ion-ios-call
        =' ' + data.contactForm.phone
      p
        i.ion-ios-mail
        =' ' + data.contactForm.email
  div.contactForm
    form(class="form-group" action="" id="contactForm")
      input(id="form-source" class="hidden" type="text" value="templates/deft" name="source" hidden)
      div.formSide.left
        input(id="form-name" class="entry" type="text" placeholder="Name" name="name" required)
        input(id="form-email" class="entry" type="email" placeholder="Email" name="email" required)
      div.formSide.right
        textarea(id="form-message" class="entry" type="text" placeholder="Message" name="message" rows="4" required)
      button(type="submit" class="btn") Send
      div#toast.toast